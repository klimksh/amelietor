{
  "rules": {
    "global-require": "off",
    "no-console": "off",
    "max-len": ["error", { "code": 120 }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  }
}
